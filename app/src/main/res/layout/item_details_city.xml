<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/title"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@id/tv_pressure"
        app:layout_constraintStart_toStartOf="@id/tv_temp_min_max"
        app:layout_constraintTop_toBottomOf="@id/tv_temp_min_max" />

    <TextView
        android:id="@+id/tv_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintStart_toStartOf="@id/tv_temp_min_max"
        app:layout_constraintBottom_toTopOf="@id/tv_wind"
        app:layout_constraintTop_toBottomOf="@+id/tv_humidity" />

    <TextView
        android:id="@+id/tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_temp_min_max"
        app:layout_constraintTop_toBottomOf="@id/tv_pressure"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_temp_min_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp max-min"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_humidity"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_humidity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity_value"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@id/tv_pressure_value"
        app:layout_constraintStart_toStartOf="@id/tv_temp_value"
        app:layout_constraintTop_toBottomOf="@id/tv_temp_value" />

    <TextView
        android:id="@+id/tv_pressure_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_value"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@id/tv_wind_value"
        app:layout_constraintStart_toStartOf="@id/tv_temp_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_humidity_value" />

    <TextView
        android:id="@+id/tv_wind_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_value"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_temp_value"
        app:layout_constraintTop_toBottomOf="@id/tv_pressure_value"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_max_min"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@id/tv_humidity_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>